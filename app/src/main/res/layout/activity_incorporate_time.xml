<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/colors"
    android:gravity="start">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Incorporate Time"
        android:id="@+id/registerText"
        android:gravity="center_horizontal"
        android:textColor="#7588ed"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textSize="20sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/registerText"
        android:layout_marginTop="30dp"
        android:id="@+id/linearLayoutLine1">

        <TextView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:ems="10"
            android:text="Sleep Hours :"
            android:textSize="15sp" />
        <EditText
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/sleepHoursEditText"
            android:hint=""
            android:background="@drawable/text_box2"

            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textColorHint="#FF7B797B" />
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Per Day"
            android:textColorHint="#ff959395"
            android:textSize="15sp" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/linearLayoutLine1"
        android:layout_marginTop="10dp"
        android:id="@+id/linearLayoutLine2">

        <TextView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:ems="10"
            android:text="Work Hours :"
            android:textColorHint="#ff959395"
            android:textSize="15sp" />
        <EditText
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/workHoursEditText"
            android:hint=""
            android:background="@drawable/text_box2"

            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textColorHint="#FF7B797B" />
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Per Week"
            android:textColorHint="#ff959395"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/linearLayoutLine2"
        android:layout_marginTop="10dp"
        android:id="@+id/linearLayoutLine3">

        <TextView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:ems="10"
            android:text="Commute Hours :"
            android:textColorHint="#ff959395"
            android:textSize="15sp" />
        <EditText
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/commuteHoursEditText"
            android:hint=""
            android:background="@drawable/text_box2"

            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textColorHint="#FF7B797B" />
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Per Day"
            android:textColorHint="#ff959395"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/linearLayoutLine3"
        android:layout_marginTop="10dp"
        android:id="@+id/linearLayoutLine4">

        <TextView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:ems="10"
            android:text="Study Hours :"
            android:textColorHint="#ff959395"
            android:textSize="15sp" />
        <EditText
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/studyHoursEditText"
            android:hint=""
            android:background="@drawable/text_box2"

            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textColorHint="#FF7B797B" />
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Per Week"
            android:textColorHint="#ff959395"
            android:textSize="15sp" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:id="@+id/addIncorporateTimeButton"
        android:background="@drawable/button_grey"
        android:layout_alignParentBottom="false"
        android:layout_alignRight="@+id/linearLayoutLine4"
        android:layout_alignEnd="@+id/linearLayoutLine4"
        android:layout_below="@+id/linearLayoutLine4"
        android:onClick="onClickButton"
        android:layout_marginTop="15dp" />

</RelativeLayout>
