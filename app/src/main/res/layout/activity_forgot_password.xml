<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/button_grey">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Password"
        android:id="@+id/getPasswordButton"
        android:background="@drawable/button_menu"
        android:onClick="getPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/usernameText"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/project_name_text"
        android:id="@+id/passwordRetrieval"
        android:textColor="#7588ed"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="20sp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/usernameText"
        android:hint="@string/username_text"
        android:textColorHint="#ff959395"
        android:background="@drawable/text_box2"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="35dp"
        android:layout_below="@+id/passwordRetrieval"
        android:layout_marginRight="35dp"
        android:gravity="center"
        android:textSize="15sp" />

</RelativeLayout>